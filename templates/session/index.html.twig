{% extends 'base.html.twig' %}

{% block title %}Liste sessions{% endblock %}

{% block body %}

<h1>Liste des sessions</h1>

{% if is_granted('ROLE_ADMIN') %}
    <a href="{{path('add_session')}}">Ajouter une session</a>    
{% endif %}

        <h2>Sessions en cours</h2>

        <table>
            <thead>
                <tr>
                    <th >Statut</th>
                    <th >Formation</th>
                    <th >Session</th>
                    <th >Date début</th>
                    <th >Date fin</th>
                    <th >Inscrit</th>
                    
                
                    {% if is_granted('ROLE_ADMIN') %}
                        <th>Editer</th>   
                        <th>Supprimer</th>
                    {% endif %}
                </tr>
            </thead>
            <tbody>
                {% if sessionsActuel is defined %}
                    
                
                    {% for session in sessionsActuel %}
                    <tr>
                        <td>
                        {% if session.stagiaires.count == session.nbPlace %}
                            Complet
                        {% endif %}
                    </td>
                        <td>{{ session.formation.nomFormation }}</td>        
                        <td><a href="">{{ session.nomSession }}</a></td>
                        <td>{{session.dateDebut | date('d/m/Y')}}</td>
                        <td>{{session.dateFin | date('d/m/Y')}}</td>
                        <td>{{ session.stagiaires.count }}/{{ session.nbPlace}}</td>

                
                        {% if is_granted('ROLE_ADMIN') %}
                        <td><a href="">modifier</a></td> 
                        <td><a href="">supprimer</a></td>  
                        {% endif %}
                        
                    </tr>
                    {% endfor %}  
                    {% endif %} 
            </tbody>
        </table>

