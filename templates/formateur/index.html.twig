{% extends 'base.html.twig' %}

{% block title %}Liste formateurs{% endblock %}

{% block body %}

<h1>Liste des Formateurs</h1>

{% if is_granted('ROLE_ADMIN') %}
    <a class="btn" href="{{path('add_formateur')}}">Ajouter un formateur</a>    
{% endif %}

<table>
    <thead>
        <tr class="title-table">
            <th >Nom</th>
            <th >Pr√©nom</th>
          
            <th>Email</th>
           
            {% if is_granted('ROLE_ADMIN') %}
                <th>Editer</th>   
                <th>Supprimer</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
            {% for formateur in formateurs %}
            <tr>
                <td><a href="{{path('show_formateur', { 'id': formateur.id })}}">{{ formateur.nomFormateur }}</a></td>
                <td><a href="{{path('show_formateur', { 'id': formateur.id })}}">{{ formateur.prenomFormateur }}</a></td>
                <td><a>{{ formateur.emailFormateur }}</a></td>
                {% if is_granted('ROLE_ADMIN') %}
                <td><a href="{{path('edit_formateur', {'id': formateur.id })}}"><i class="fa-sharp fa-solid fa-pen-to-square fa-xl" style="color: #ffc800;"></i></a></td> 
                <td><a href="{{path('delete_formateur', {'id': formateur.id })}}"><i class="fa-solid fa-delete-left fa-xl" style="color: #fc0303;"></i></a></td>  
                {% endif %}
                
            </tr>
            {% endfor %}


            
      
    </tbody>
</table>
{% endblock %}
