{% extends 'base.html.twig' %}

{% block title %}Liste formations{% endblock %}

{% block body %}

{% if app.user %}
    


<h1>Liste des Formations</h1>

{% if is_granted('ROLE_ADMIN') %}
    <a class="btn" href="{{path('add_formation')}}">Ajouter une formation</a>    
{% endif %}

<table>
    <thead>
        <tr class="title-table">
            <th >Nom de la formation </th>
            
           
            {% if is_granted('ROLE_ADMIN') %}
                <th>Editer</th>   
                <th>Supprimer</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
            {% for formation in formations %}
            <tr>
                <td>{{ formation }}</td>
           
                {% if is_granted('ROLE_ADMIN') %}
                <td><a href="{{path('edit_formation', {'id': formation.id })}}"><i class="fa-sharp fa-solid fa-pen-to-square fa-xl" style="color: #ffc800;"></i></a></td> 
                <td><a href="{{path('delete_formation', {'id': formation.id })}}"><i class="fa-solid fa-delete-left fa-xl" style="color: #fc0303;"></i></a></td>  
                {% endif %}
                
            </tr>
            {% endfor %}


            
      
    </tbody>
</table>

{% else %}
<h2>Merci de vous connectez pour avoir acc√®s au contenu</h2>

{% endif %}
{% endblock %}
