{% extends 'base.html.twig' %}

{% block title %}Liste formations{% endblock %}

{% block body %}

<h1>Liste des Formations</h1>

{% if is_granted('ROLE_ADMIN') %}
    <a href="{{path('add_formation')}}">Ajouter une formation</a>    
{% endif %}

<table>
    <thead>
        <tr>
            <th >Nom de la formation </th>
            
           
            {% if is_granted('ROLE_ADMIN') %}
                <th>Editer</th>   
                <th>Supprimer</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
            {% for formation in formations %}
            <tr>
                <td><a href="">{{ formation }}</a></td>
           
                {% if is_granted('ROLE_ADMIN') %}
                <td><a href="{{path('edit_formation', {'id': formation.id })}}">modifier</a></td> 
                <td><a href="{{path('delete_formation', {'id': formation.id })}}">supprimer</a></td>  
                {% endif %}
                
            </tr>
            {% endfor %}


            
      
    </tbody>
</table>
{% endblock %}
