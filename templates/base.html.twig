<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav>
            <ul>
                <li>
                    <a href="{{path('app_home')}}">Accueil</a>
                </li>

                <li>
                    <a href="{{path('app_formation')}}">Formation</a>
                </li>

                <li>
                    <a href="{{path('app_session')}}">Sessions</a>
                </li>

                <li>
                    <a href="{{path('app_stagiaire')}}">Stagiaires</a>
                </li>

                <li>
                    <a href="{{path('app_formateur')}}">Formateurs</a>
                </li>

                <li>
                    <a href="{{path('app_categorie')}}">Catégorie</a>
                </li>
            
        
                {% if app.user %} <!--Si utilisateur connecté-->
                <li>
                    <a href="{{ path('app_logout')}}">Déconnexion</a>
                </li>

                <li>
                    <a href="">Mon profil</a>
                </li>
                {% else %}
                <li>
                    <a href="{{ path('app_login')}}">Connexion</a>
                </li>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %} <!--Si utilisateur est admin -->
                <li>
                    <a href="{{path('admin_home')}}">Administration</a>
                </li>
                    
                {% endif %}
            </ul>
    </nav>

        {% block body %}{% endblock %}
    </body>
</html>
